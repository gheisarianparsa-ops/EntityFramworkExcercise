{
	"name": "clean-vs-code",
	"displayName": "Clean",
	"description": "Visual Studio Code plugin for Eastwood, the language server for the functional programming language Clean",
	"publisher": "TOPSoftware",
	"icon": "logo.png",
	"version": "0.1.3",
	"homepage": "https://gitlab.com/top-software/clean-vs-code/",
	"bugs": "https://gitlab.com/top-software/clean-vs-code/-/issues/",
	"repository": {
		"type": "git",
		"url": "gitlab:top-software/clean-vs-code"
	},
	"author": {
		"name": "TOP Software Technology B.V.",
		"email": "info@top-software.nl",
		"url": "https://top-software.nl/"
	},
	"license": "GPL-3.0-or-later",
	"engines": {
		"vscode": "^1.91.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:clean"
	],
	"main": "./out/main.js",
	"contributes": {
		"languages": [
			{
				"id": "clean",
				"extensions": [
					".dcl",
					".icl"
				],
				"aliases": [
					"Clean"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "clean",
				"scopeName": "source.clean",
				"path": "./syntaxes/clean.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run -S esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run -S esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./",
		"lint": "eslint src --ext ts"
	},
	"dependencies": {
		"ncu": "^0.2.1",
		"npm": "^10.8.1",
		"npm-check-updates": "^16.14.20",
		"vsce": "^2.0.0",
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@types/node": "20.x",
		"@types/vscode": "^1.91.0",
		"@typescript-eslint/eslint-plugin": "^7.16.0",
		"@typescript-eslint/parser": "^7.16.0",
		"esbuild": "^0.23.0",
		"eslint": "^8.55.0",
		"typescript": "^5.5.3"
	}
}
